{
  "expo": {
    "name": "St. George Church Management",
    "slug": "st-george-church-management",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/saint-george.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/saint-george.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "UIBackgroundModes": ["background-processing", "background-fetch"]
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/saint-george.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "usesCleartextTraffic": true,
      "permissions": [
        "android.permission.INTERNET",
        "android.permission.ACCESS_NETWORK_STATE",
        "android.permission.RECEIVE_BOOT_COMPLETED",
        "android.permission.VIBRATE"
      ]
    },
    "web": {
      "favicon": "./assets/saint-george.png"
    },
    "plugins": [
      [
        "expo-notifications",
        {
          "icon": "./assets/saint-george.png",
          "color": "#ffffff",
          "defaultChannel": "daily-verses"
        }
      ]
    ],
    "notification": {
      "icon": "./assets/saint-george.png",
      "color": "#ffffff",
      "androidMode": "default",
      "androidCollapsedTitle": "آية اليوم"
    },
    "extra": {
      "eas": {
        "projectId": "your-project-id"
      }
    }
  }
}
